[project]
name = "{{ SERVICE_NAME }}"
version = "0.1.0"
description = "Add your description here"
requires-python = ">=3.12"
dependencies = [
]

[dependency-groups]
dev = [
    "black>=25.1.0",
    "freezegun>=1.5.1",
    "mypy>=1.15.0",
    "pre-commit>=4.2.0",
    "pylint>=3.3.6",
    "pytest>=8.3.5",
    "pytest-asyncio>=0.26.0",
    "pytest-html>=4.1.1",
    "pytest-mock>=3.14.0",
    "respx>=0.22.0",
    "ruff>=0.11.4",
]

[tool.black]
line-length = 140
target-version = ["py312"]

[tool.mypy]
python_version = 3.12

[tool.ruff]
target-version = "py312"
line-length = 140

[tool.ruff.lint]
# Add all implemented Pylint rules (PL) to Ruff's default checks
extend-select = ["PL"]

[tool.uv.workspace]
members = ["test"]

[tool.pytest.ini_options]
asyncio_mode = "auto"

